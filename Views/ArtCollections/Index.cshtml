@model IEnumerable<ArtistWebsite.Models.ArtCollection>

@{
    ViewData["Title"] = "Art Collections";
}

<h1>Art Collections</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artists)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artists.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArtID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ArtID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ArtID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
